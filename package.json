{
  "name": "stream-ecommerce",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "cross-env BUILD_TYPE=node vite dev",
    "build": "npm run build:static && npm run build:node",
    "build:static": "cross-env BUILD_TYPE=static vite build",
    "build:node": "cross-env BUILD_TYPE=node vite build",
    "build:vercel": "cross-env BUILD_TYPE=vercel vite build",
    "build:android": "cross-env CAP_HOST=static npm run build:static && npm run android",
    "dev:android": "cross-env CAP_HOST=server concurrently \"npm run dev\" \"npm run android\"",
    "preview": "vite preview",
    "android": "cap run android",
    "android:open": "cap open android",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e": "playwright test",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.2.0",
    "@chromatic-com/storybook": "^3.2.3",
    "@playwright/test": "^1.45.3",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/adapter-vercel": "^5.7.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/node": "^22.15.24",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.22.0",
    "sass": "^1.83.1",
    "storybook": "^8.4.7",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.11",
    "vite-node": "^2.1.8",
    "vitest": "^2.0.4"
  },
  "dependencies": {
    "@capacitor/android": "^7.2.0",
    "@capacitor/core": "^7.2.0",
    "@capacitor/ios": "^7.2.0",
    "@capgo/capacitor-social-login": "^7.4.9",
    "@inlang/paraglide-sveltekit": "^0.11.1",
    "@stream-io/node-sdk": "^0.4.9",
    "@stream-io/video-client": "^1.14.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.49.4",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4",
    "stripe": "^18.2.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "native-run": "patches/native-run.patch"
    }
  }
}
